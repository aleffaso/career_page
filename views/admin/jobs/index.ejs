<section class="projects-section bg-white" id="jobs">
    <div class="container px-4 px-lg-5 ">
        <h1 class="text-pink mb-4 text-center"><b>Editar vagas</b></h1>
    </div>

    <table class="container-table table table-bordered table-hover mb-5">
        <thead>
            <tr>
                <th scope="col"><h2 class="text-pink"><b>√Årea</b></h2></th>
                <th scope="col"><h2 class="text-gray"><b>Vaga</b></h2></th>
                <th scope="col"><h5 class="text-gray"><b>Visualizar</b></h5></th>
                <th scope="col"><h5 class="text-gray"><b>Remover</b></h5></th>
                <th scope="col"><h5 class="text-gray"><b>Editar</b></h5></th>
            </tr>
        </thead>

        <tbody>
            <% jobs.forEach(jobs => { %>
            <tr>
                <td><%= jobs.area %></td>
                <td><%= jobs.title %></td>
                <td><a href="<%=jobs.link%>"><button class="btn=sm btn-success" >Visualizar</button></a></td>
                <form method="POST" action="/jobs/delete" onsubmit=deleteCheck(event,this)>
                    <input type="hidden" name="id" value="<%= jobs.id %>">
                    <td><button class="btn-sm btn-danger">Remover</button></td>
                </form>
                <td><a href="/admin/jobs/edit/<%= jobs.id %>"><button  type="button" class="btn-sm btn-info">Editar</button></a></td>
            </tr>   
            <% }) %> 
        </tbody>
    </table>

    <div class="container-sm text-center">
        <a href="/admin/jobs/new"><button  type="button" class="btn-job btn-warning">Criar nova vaga</button></a>
    </div>
</section>



    <div class="card" id="form-quest">
        <div class="card-header">
            <h3>Login</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/authenticate">
                <label>E-mail</label>
                <input type="text" placeholder="E-mail" id="email" class="form-control" name="email" required>
                <br>
                <label>Senha</label>
                <input type="password" placeholder="Senha" id="password" class="form-control" name="password" required>
                <br>
                <button type="submit" class="btn-small-login btn-secondary">
                    <p class="fs-5"><b>Acessar</b></p>
                </button>
            </form>
        </div>
    </div>
</div>


<div class="container-card-register mb-4">
    <div class="card" id="form-quest">
        <div class="card-header">
            <h3>Cadastro</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/users/save">
                <label>Nome</label>
                <input type="text" placeholder="Nome" class="form-control" name="name" required>
                <br>
                <label>E-mail</label>
                <input type="text" placeholder="E-mail" class="form-control" name="email" required>
                <br>
                <label>Senha</label>
                <input type="password" placeholder="Senha" class="form-control" name="password" required>
                <br>
                <label>Confirmar senha</label>
                <input type="password" placeholder="Senha" class="form-control" name="confirmPassword" required>
                <br>
                <div class="text-center">
                    <button type="submit" class="btn-job btn-success">
                        <b>Enviar</b>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


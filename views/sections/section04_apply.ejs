<section class="bg-white" id="apply">
    <div class="container px-30 px-lg-5 ">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center">
                    <h1 class="text-pink mb-5 mt-6"><b>Vagas abertas</b></h1>
                </div>
            </div>
        </div>
    </div>

    <table class="container-table table table-bordered mb-5">
        <thead>
            <tr>
                <th scope="col"><h2 class="text-pink"><b>Área</b></h2></th>
                <th scope="col"><h2 class="text-gray"><b>Vaga</b></h2></th>
            </tr>
        </thead>
        <tbody>
            <% jobs.forEach(jobs => { %>
            <tr>
                <td><%= jobs.area %></td>
                <td><%= jobs.title %></td>
            </tr>   
            <% }) %> 
        </tbody>
    </table>
</section>
<section class="projects-section bg-white" id="jobs">
    <div class="container px-4 px-lg-5 ">
        <div class="row gx-4 gx-lg-5 ">
            <div class="col-lg-8">
                <h1 class="text-gray mb-4 text-center">Confira nossas vagas</h1>
            </div>
        </div>
    </div>

    <% jobs.forEach(jobs => { %>
    <div class="container px-20">
        <hr>
        <div class="grid-container text-center">
            <div><h2 class="text-gray "><%= jobs.area %> </h2></div>
            <div><h5 class="text-gray "><%= jobs.title %></h5></div>
            <div><h2><a class="btn-sm btn-secondary" href="jobdescription/<%=jobs.id%>">Applicar para a vaga</a></h2></div>
        </div>
    </div> 
    <% }) %>
</section>

